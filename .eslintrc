{
    "env": {
      "node": true,
      "es6": true,
      "browser": true
    },
		"parserOptions": {
			"ecmaVersion": 2017,
      "impliedStrict": true,
      "sourceType": "module"
    },
    "globals": {
      "chrome": true
    },
    "rules": {
        "strict": "off",
				"vars-on-top": "error",
        "no-shadow": "error",
        "no-shadow-restricted-names": "error",
				"no-unused-vars": ["error", { "vars": "all", "args": "none" }],
				"no-use-before-define": "error",
        "comma-dangle": ["error", "never"],
        "no-cond-assign": ["error", "except-parens"],
        "no-debugger": "error",
        "no-alert": "warn",
        "no-constant-condition": "error",
        "no-dupe-args": "error",
        "no-dupe-keys": "error",
        "no-duplicate-case": "error",
        "no-empty": "error",
        "no-empty-character-class": "error",
        "no-ex-assign": "error",
        "no-extra-semi": "error",
        "no-func-assign": "error",
        "no-inner-declarations": "error",
        "no-invalid-regexp": "error",
        "no-irregular-whitespace": "error",
				"no-negated-condition": "error",
        "no-unsafe-negation": "error",
        "no-obj-calls": "error",
				"no-plusplus": "error",
        "no-regex-spaces": "error",
        "no-sparse-arrays": "error",
				"no-unexpected-multiline": "error",
        "no-unreachable": "error",
        "use-isnan": "error",
        "valid-typeof": "error",
        "consistent-return": "error",
        "curly": [ "error", "multi-line"],
        "default-case": "error",
				"dot-location": ["error", "property"],
				"dot-notation": "error", 
        "eqeqeq": "error",
        "guard-for-in": "error",
        "no-caller": "error",
        "no-div-regex": "error",
        "no-else-return": "off",
        "no-labels": "error",
        "no-eq-null": "error",
        "no-eval": "error",
        "no-extend-native": "error",
        "no-extra-bind": "error",
        "no-fallthrough": "error",
        "no-floating-decimal": "error",
				"no-global-assign": "error",
				"no-implicit-coercion": ["error", {"boolean": false}],
        "no-implied-eval": "error",
				"no-invalid-this": "error",
        "no-loop-func": "error",
				"no-multi-spaces": "error",
        "no-multi-str": "error",
        "no-new": "error",
        "no-new-func": "error",
        "no-new-wrappers": "error",
        "no-octal": "error",
        "no-octal-escape": "error",
        "no-param-reassign": "error",
        "no-proto": "error",
        "no-redeclare": "error",
        "no-return-assign": "error",
        "no-script-url": "error",
				"no-self-assign": "error",
        "no-self-compare": "error",
        "no-sequences": "error",
				"no-unmodified-loop-condition": "error",
				"no-unused-expressions": "off",
				"no-useless-call": "error",
				"no-useless-concat": "error",
				"no-useless-escape": "error",
				"no-useless-return": "error",
        "no-throw-literal": "error",
				"no-underscore-dangle": "error",
        "no-undef": "error",
        "no-undef-init": "error",
				"no-unneeded-ternary": "error",
        "no-with": "error",
				"accessor-pairs": "error",
				"array-callback-return": "warn",
				"block-scoped-var": "warn",
        "radix": "error",
        "wrap-iife": ["error", "any"],
        "yoda": "error",
				"block-spacing": "error",
				"indent": ["error", "tab", { "SwitchCase": 1, "CallExpression": { "arguments": 1 } }],
				"brace-style": ["error", "1tbs", { "allowSingleLine": true}],
				"quotes": ["error", "double", { "avoidEscape": true, "allowTemplateLiterals": true }],
				"quote-props": ["error", "as-needed"],
				"camelcase": "off",
        "comma-spacing": ["error", { "before": false, "after": true }],
        "comma-style": ["error", "last"],
        "eol-last": "off",
				"func-call-spacing": ["error", "never"],
				"func-name-matching": ["error", "always"],
				"capitalized-comments": ["error", "always", { "ignorePattern": "iOS|cmp|hlp|evt", "ignoreConsecutiveComments": true }],
        "key-spacing": ["error", {"beforeColon": false, "afterColon": true, "mode": "strict" }],
				"new-cap": ["error", { "newIsCap": true }],
        "new-parens": "error",
				"newline-after-var": "error",
				"newline-before-return": "error",
        "no-array-constructor": "error",
        "no-lonely-if": "warn",
				"no-mixed-spaces-and-tabs": ["warn", "smart-tabs"],
				"no-multiple-empty-lines": ["error", { "max": 1 }],
        "no-nested-ternary": "error",
        "no-new-object": "error",
				"no-whitespace-before-property": "error",
        "no-trailing-spaces": ["error", { "skipBlankLines": true }],
        "no-extra-parens": "error",
        "one-var": ["error", "never"],
        "padded-blocks": ["error", "never"],
        "semi": ["error", "always"],
        "semi-spacing": ["error", { "before": false, "after": true }],
				"keyword-spacing": ["error", { "overrides": { "if": { "after": false }, "for": { "after": false }, "while": { "after": false }, "switch": { "after": false }, "catch": { "after": false } } }],
				"object-curly-newline": "off",
				"object-curly-spacing": ["error", "always", { "arraysInObjects": true, "objectsInObjects": true }],
				"object-property-newline": ["error", { "allowMultiplePropertiesPerLine": false }],
				"one-var-declaration-per-line": ["error", "always"],
				"operator-assignment": ["error", "always"],
        "space-before-blocks": "error",
        "space-before-function-paren": ["error", { "anonymous": "never", "named": "never" }],
        "space-infix-ops": "error",
				"space-unary-ops": ["error", { "words": true, "nonwords": false}],
        "spaced-comment": ["error", "always", { "exceptions": ["-", "+", "*"], "markers": ["=", "!"] }],
        "global-require": "error",
        "no-mixed-requires": "error",
        "no-new-require": "error",
        "no-path-concat": "error",
        "handle-callback-err": ["error", "err"]
    }
}